pipeline {
    agent any

    stages {
        stage('Git checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/master']],
                          doGenerateSubmoduleConfigurations: false,
                          extensions: [],
                          submoduleCfg: [],
                          userRemoteConfigs: [[url: 'https://github.com/harshitojha08/ToDoRepo.git']]])
            }
        }

        stage('Build and Publish Docker Image') {
            steps {
                script {
                    docker.build("project-img")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("project-img").run('-p 8080:80')
                }
            }
        }
    }
}
